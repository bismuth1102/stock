def make_decision(strategy_key, target_date_str=None, fetch_news=False):
    cfg = STRATEGIES[strategy_key]
    pf = cfg['portfolio']
    
    # 1. è·å–å…¨é‡æ•°æ® (ä½¿ç”¨å…¨å±€ GLOBAL_LOOKBACK_DAYS)
    df_full = get_data(cfg['code'], GLOBAL_LOOKBACK_DAYS)
    if df_full is None: return

    # è®¡ç®—æŒ‡æ ‡
    df_full = calc_indicators(df_full)

    # æ—¶é—´æ—…è¡Œåˆ‡ç‰‡
    if target_date_str:
        target_dt = pd.to_datetime(target_date_str)
        df = df_full[df_full['æ—¥æœŸ'] <= target_dt].copy()
        if df.empty:
            print(f"âŒ é”™è¯¯ï¼šåœ¨ {target_date_str} ä¹‹å‰æ²¡æœ‰æ•°æ®ã€‚")
            return
        real_last_date = df['æ—¥æœŸ'].iloc[-1]
        if real_last_date != target_dt:
            print(f"âš ï¸ æ³¨æ„ï¼šç›®æ ‡æ—¥æœŸ {target_date_str} ä¼‘å¸‚ï¼Œä½¿ç”¨å‰ä¸€äº¤æ˜“æ—¥: {real_last_date.date()}")
    else:
        df = df_full.copy()
    
    last_row = df.iloc[-1]
    last_date_display = last_row['æ—¥æœŸ'].date()
    
    print("="*60)
    print(f"ğŸš€ æ ‡çš„: {cfg['name']} | æ—¥æœŸ: {last_date_display}")
    if FIXED_TRAIN_WINDOW:
        print(f"ğŸ§  æ¨¡å‹è®°å¿†é™åˆ¶: ä»…ä½¿ç”¨æœ€è¿‘ {FIXED_TRAIN_WINDOW} å¤©æ•°æ®è®­ç»ƒ")
    else:
        print(f"ğŸ§  æ¨¡å‹è®°å¿†æ¨¡å¼: ä½¿ç”¨å…¨éƒ¨å¯ç”¨å†å²æ•°æ® ({len(df)}å¤©)")
    print(f"ğŸ“Š æ”¶ç›˜: {last_row['æ”¶ç›˜']:.3f} | ATR: {last_row['ATR']:.3f}")
    
    # 2. æŠ€æœ¯é¢ AI é¢„æµ‹ (ä¼ å…¥å…¨å±€é…ç½®çš„çª—å£å¤§å°)
    print("ğŸ¤– å¯åŠ¨æœºå™¨å­¦ä¹ æ¨¡å‹...")
    tech_buy_prob, tech_sell_prob = train_and_predict(df, cfg, FIXED_TRAIN_WINDOW)
    
    # 3. æ¶ˆæ¯é¢
    sentiment = None
    if fetch_news:
        sentiment = get_sentiment_from_news(cfg['name'], cfg.get('news_keywords', cfg['name']), target_date_str)
    else:
        print("ğŸ”• æ¶ˆæ¯é¢: å·²è·³è¿‡ (æœªè¾“å…¥ news å‚æ•°ï¼Œé»˜è®¤ä¸­æ€§)")
    
    # 4. ç»¼åˆæ‰“åˆ†
    news_bullish = 50 
    news_reason = "æ— æœ‰æ•ˆæ–°é—»æ•°æ®"
    if sentiment:
        news_bullish = sentiment.get('bullish_pct', 50)
        news_reason = sentiment.get('final_reason', 'æœªçŸ¥')
        print("\nğŸ“° æ–°é—»åˆ†ææ‘˜è¦:")
        for item in sentiment.get('news_details', []):
            flag = "ğŸ”´" if "åˆ©å¤š" in item['impact'] else ("ğŸŸ¢" if "åˆ©ç©º" in item['impact'] else "âšª")
            print(f"   {flag} {item.get('summary')[:40]}...")

    final_score = (tech_buy_prob * 0.6) + ((news_bullish / 100) * 0.4)
    
    print("\n" + "-" * 50)
    print(f"ğŸ“ˆ æŠ€æœ¯é¢: ä¹°å…¥æ¦‚ç‡ {tech_buy_prob:.2f} | é£é™©æ¦‚ç‡ {tech_sell_prob:.2f} | MA5: {last_row['MA5']:.2f} vs MA20: {last_row['MA20']:.2f}")
    if sentiment:
        print(f"ğŸŒ æ¶ˆæ¯é¢: çœ‹å¤šç¨‹åº¦ {news_bullish}% | è§‚ç‚¹: {news_reason}")
    else:
        print(f"ğŸŒ æ¶ˆæ¯é¢: 50% (é»˜è®¤ä¸­æ€§)")
        
    print("-" * 50)
    print(f"âš–ï¸  æœ€ç»ˆè¯„åˆ†: {final_score:.2f}")
    
    # äº¤æ˜“å»ºè®®
    sell_signal = False
    buy_signal = False
    reason = ""
    
    if (tech_sell_prob > 0.85) or (tech_sell_prob > 0.7 and news_bullish < 30):
        sell_signal = True
        reason = f"é£æ§å…±æŒ¯ (é£é™©ç‡:{tech_sell_prob:.2f})"
        
    if not sell_signal:
        risk_pass = (tech_sell_prob < 0.85)
        trend_ok = last_row['Trend_OK']
        if trend_ok and (final_score > cfg['buy_conf']) and risk_pass:
            buy_signal = True
            reason = f"ä¿¡å·è§¦å‘ (åˆ†{final_score:.2f})"

    # ä½¿ç”¨å…¨å±€å˜é‡ GLOBAL_MAX_BULLETS
    if sell_signal:
        print(f"\nğŸ“¢ å»ºè®®: ã€å–å‡º/æ¸…ä»“ã€‘ ğŸ’¡ {reason}")
    elif buy_signal:
        # æ£€æŸ¥ä»“ä½æ˜¯å¦å·²æ»¡
        if pf['units_used'] < GLOBAL_MAX_BULLETS:
            print(f"\nğŸ“¢ å»ºè®®: ã€ä¹°å…¥/åŠ ä»“ã€‘ ğŸ’¡ {reason}")
            # ç®€å•çš„èµ„é‡‘è®¡ç®—å±•ç¤º
            per_share = pf['total_capital'] / GLOBAL_MAX_BULLETS
            print(f"   å»ºè®®é‡‘é¢: {per_share:.0f} å…ƒ (ç¬¬ {pf['units_used']+1}/{GLOBAL_MAX_BULLETS} ç¬”)")
        else:
            print(f"\nğŸ§˜ å»ºè®®: ã€æŒæœ‰ã€‘ ğŸ’¡ {reason} (ä½†ä»“ä½å·²æ»¡ {GLOBAL_MAX_BULLETS}/{GLOBAL_MAX_BULLETS})")
    else:
        print(f"\nğŸ§˜ å»ºè®®: ã€è§‚æœ›ã€‘")

